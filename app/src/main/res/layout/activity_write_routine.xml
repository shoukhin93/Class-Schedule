<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_write_routine"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.shoukhin.classroutine.WriteRoutine">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/previous"
            android:scaleType="fitXY"
            android:background="@android:color/transparent" android:id="@+id/addPreviousDayIbtn"
            android:layout_weight="1" />

        <TextView
            android:text="Saturday"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/addDayTBx"
            android:textAlignment="center"
            android:layout_weight="1"/>

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/next"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:id="@+id/addNextDayIbtn"
            android:layout_weight="1"/>

    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addCourseNameEdtx"
        android:hint="Course Name" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addCourseCodeEdtx"
        android:hint="Course Code" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/addfromtbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17sp"
            android:text="From" />

        <TextView
            android:id="@+id/addfromtimetbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:typeface="serif"
            android:text="TextView" />

        <TextView
            android:id="@+id/addtotbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="17sp"
            android:text="To" />

        <TextView
            android:id="@+id/addtotimetbx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:typeface="serif"
            android:text="TextView" />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/addRoomNumEdtx"
        android:hint="Room Number" />

    <Button
        android:text="Save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/saveRoutineBtn" />

</LinearLayout>
